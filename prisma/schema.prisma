// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Your models remain the same...
model User {
  id           String   @id @default(cuid())
  telegramId   BigInt   @unique
  username     String?
  firstName    String?
  lastName     String?
  languageCode String?
  isBot        Boolean  @default(false)
  gamesPlayed  Int      @default(0)
  gamesWon     Int      @default(0)
  totalScore   Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  bingoCards   BingoCard[]
  gamePlayers  GamePlayer[]
  hostedGames  Game[]      @relation("GameHost")
  wonGames     Game[]      @relation("GameWinner")
  
  @@map("users")
}

model Game {
  id             String     @id @default(cuid())
  code           String     @unique
  hostId         String
  status         GameStatus @default(WAITING)
  maxPlayers     Int        @default(10)
  currentPlayers Int        @default(0)
  numbersCalled  Json
  winnerId       String?
  isPrivate      Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  
  host       User         @relation("GameHost", fields: [hostId], references: [id], onDelete: Cascade)
  players    GamePlayer[]
  bingoCards BingoCard[]
  winner     User?        @relation("GameWinner", fields: [winnerId], references: [id])
  
  @@map("games")
}

model GamePlayer {
  id       String   @id @default(cuid())
  userId   String
  gameId   String
  joinedAt DateTime @default(now())
  isReady  Boolean  @default(false)
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  @@unique([userId, gameId])
  @@map("game_players")
}

model BingoCard {
  id              String   @id @default(cuid())
  userId          String
  gameId          String
  numbers         Json
  markedPositions Json
  isWinner        Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  
  @@unique([userId, gameId])
  @@map("bingo_cards")
}

enum GameStatus {
  WAITING
  ACTIVE
  FINISHED
  CANCELLED
}